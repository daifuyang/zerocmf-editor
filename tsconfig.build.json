{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["./src/shared/*"] 
    },
    "declaration": true,
    "declarationDir": "es",
    "emitDeclarationOnly": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist", "es", "lib"]
}
