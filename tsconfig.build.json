{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".", // 基础路径
    "paths": {
      "shared/*": ["shared/src/*"] // 路径别名
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
